<UserControl x:Class="SmtSim.ucSmt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="../Icons/smtLine.jpg" />
            </Grid.Background>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="SMT基础知识" FontSize="20" Height="40" HorizontalAlignment="Right" Click="btnDoc_Click" />
            <Button Content="SMT原理视频" FontSize="20" Height="40"  Grid.Column="1" Click="btnSmtVideo_Click"/>
            <Button Content="生产线工艺设计" FontSize="20" Height="40" Grid.Column="2" Click="btnSmtDesign_Click"/>
            <Button Content="生产线工艺仿真演示" FontSize="20" Height="40" HorizontalAlignment="Left" Grid.Column="3" Click="btnSmtFlash_Click"/>
        </Grid>
    </Grid>
</UserControl>
